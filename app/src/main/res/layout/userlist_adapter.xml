<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:id="@+id/rel_userListAdapter"
            android:layout_marginBottom="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_16sdp">

        <RelativeLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerVertical="true"
                android:id="@+id/rel_Img_userListAdapter">

            <ProgressBar
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"/>


            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/img_userListAdapter"
                    android:transitionName="userImageTransition"/>

        </RelativeLayout>





        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rel_Img_userListAdapter"
                android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_centerVertical="true">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/avenir_85_heavy"

                    android:textColor="@color/textColorDark"
                    android:layout_marginRight="@dimen/_66sdp"
                    android:id="@+id/username_userListAdpter"
                    android:text="Aaron"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:maxLines="2"
                    android:visibility="gone"
                    android:textColor="@color/textColorDark"
                    android:layout_below="@+id/username_userListAdpter"
                    android:text="@string/dummy_message"/>

            <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenir_85_heavy"
                    android:id="@+id/txt_timeUserList"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/_13sdp"
                    android:text="54m"/>

        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>