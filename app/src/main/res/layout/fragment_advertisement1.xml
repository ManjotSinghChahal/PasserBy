<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.activities.home.fragments.userList.UserList">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp">


                <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/img_userProfileHome"
                        android:background="@drawable/userr"
                        android:visibility="gone"
                        android:layout_centerVertical="true"/>


                <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_grey"
                        android:layout_height="@dimen/_30sdp">

                    <RelativeLayout
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_14sdp"
                                android:id="@+id/img_passerbyHome_grey"
                                android:background="@drawable/hand_grey"/>

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:id="@+id/img_passerbyHome_theme"
                                android:background="@drawable/passerby_icon"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/img_chatHome_theme"
                                android:background="@drawable/chat_theme"/>

                        <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/img_chatHome_grey"
                                android:visibility="gone"
                                android:background="@drawable/chat_friend_grey"/>
                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/rel_menu_userList"
                        android:layout_alignParentRight="true">
                    <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@drawable/menu_grey"
                            android:layout_centerInParent="true"/>

                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22sdp"
                        android:id="@+id/txt_homeTitle"
                        android:text="@string/passerby"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorAppTheme"/>

                <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/rel_map"
                        android:layout_alignParentRight="true">

                    <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/map_icon"/>

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/home_grey">

        </View>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/rounded_corners_grey">


            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/search"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textSize="@dimen/_16sdp"
                    android:text="@string/search"/>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/adverisement_color">


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/circle_white">

        <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/img_userProfileHomeNew"
                android:layout_centerInParent="true"
                android:background="@drawable/userr"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userIcon_adv"
            android:textSize="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_185sdp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="@dimen/_18sdp"
            android:id="@+id/adv1_skip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_26sdp"
            android:textColor="@color/colorWhite"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_above="@+id/adv1_skip"
            android:text="@string/next"
            android:textColor="@color/colorAppTheme"
            android:id="@+id/next_userAdv"
            android:gravity="center"
            android:textSize="@dimen/_22sdp"
            android:background="@drawable/round_outlining_theme_whitefull"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_36sdp"
            android:layout_marginRight="@dimen/_36sdp"/>



</RelativeLayout>