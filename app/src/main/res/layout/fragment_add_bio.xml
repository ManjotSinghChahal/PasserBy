<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/rootAddBio"
              tools:context=".ui.activities.home.fragments.addBio.AddBio">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_26sdp">

        <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_19sdp"
                android:background="@drawable/arrow_back"
                android:id="@+id/back_addBio"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_bio"
                android:textColor="@color/textColorDark"
                android:singleLine="true"
                android:textSize="@dimen/_17sdp"
                android:layout_centerInParent="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:id="@+id/txt_add_addBio"
                android:textColor="@color/colorAppTheme"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/very_light_gray"></View>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/avenirheavy"
            android:maxLength="150"
            android:textColor="@color/bio_clor"
            android:hint="Add Bio"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/edt_addBio"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_6sdp"/>

</LinearLayout>