<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:id="@+id/rel_userListChatAdapter"
            android:layout_marginBottom="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_16sdp">

        <RelativeLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/rel_userChatListAdapter"
                android:layout_centerVertical="true">

            <ProgressBar
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/img_userChatListAdapter"
            />


        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/rel_userChatListAdapter"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/avenir_85_heavy"
                    android:textColor="@color/textColorDark"
                    android:layout_marginRight="@dimen/_66sdp"
                    android:id="@+id/username_userChatListAdpter"
                    android:text="Aaron"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username_userChatListAdpter">

                <RelativeLayout
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center_vertical">
                    <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_centerVertical="true"
                            android:id="@+id/chatIcon_userChatListAdpt"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="16dp"
                            android:layout_marginEnd="16dp"/>
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_messageStatus_userChatListAdpt"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/avenir_85_heavy"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="@string/sent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:id="@+id/txt_time_userChatListAdpt"
                        android:fontFamily="@font/avenir_85_heavy"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/_13sdp"
                        android:text="42m"/>

            </LinearLayout>
            <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/_13sdp"
                      android:maxLines="2"
                      android:layout_below="@+id/username_userChatListAdpter"
                      android:text="@string/dummy_message"/>

              <TextView
                      android:layout_width="@dimen/_40sdp"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginTop="@dimen/_6sdp"
                      android:textSize="@dimen/_13sdp"
                      android:text="54m"/>-->

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>